<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sms_tv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS Verification"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>
        <ImageView
            android:id="@+id/action_img"
            android:layout_below="@+id/sms_tv"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mail_sms"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/explain1_tv"
            android:layout_below="@+id/action_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explain_1"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/explain2_tv"
            android:layout_below="@+id/explain1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explain_2"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:id="@+id/linear_LO"
            android:layout_below="@+id/explain2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/national_flag_1"/>
            <TextView
                android:id="@+id/numberPhone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "020 587 887 67"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/enter_tv"
            android:layout_below="@+id/linear_LO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Code"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/enter_edt"
            android:layout_below="@+id/enter_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"/>
        <Button
            android:id="@+id/verify_imgBtn"
            android:layout_below="@+id/enter_edt"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonNext"
            android:text="Verify"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
        <Button
            android:id="@+id/cancel_imgBtn"
            android:layout_below="@+id/verify_imgBtn"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="Verify"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</ScrollView>

